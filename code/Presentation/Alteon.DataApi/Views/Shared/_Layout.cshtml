    <script>
        function showWindow() {
            $(".cover").attr("style", "display:block");
            $("#update").attr("style", "display:block");

        }

        function hidWindow() {
            $(".cover").attr("style", "display:none");
            $("#update").attr("style", "display:none");
        }
    </script>

    @RenderSection("iScript", required: false)
</body>
</html>
